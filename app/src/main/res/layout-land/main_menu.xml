<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz Yourself"
        android:id="@+id/quiz"
        android:onClick="onQuizClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="102dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rules"
        android:onClick="onRulesClicked"
        android:id="@+id/rules"
        android:layout_alignTop="@+id/quiz"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quit"
        android:onClick="onMainMenuQuitClicked"
        android:id="@+id/main_menu_quit"
        android:layout_alignTop="@+id/rules"
        android:layout_toEndOf="@+id/rules"
        android:layout_marginStart="55dp"/>

    <ImageView
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:id="@+id/imageView2"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center_horizontal|top"
        android:backgroundTint="#5de0ef"
        android:background="#5de0ef"
        android:backgroundTintMode="src_over"
        android:foreground="#5de0ef"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>